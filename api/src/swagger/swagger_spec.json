{
        "swagger": "2.0",
        "info": {
            "title": "GraphQL API",
            "version": "1.0"
        },
        "basePath": "/",
        "paths": {
            "/graphql": {
                "post": {
                    "summary": "GraphQL API",
                    "description": "Execute GraphQL queries",
                    "parameters": [
                        {
                            "in": "body",
                            "name": "query",
                            "description": "GraphQL query",
                            "required": true,
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "query": {"type": "string"},
                                    "variables": {"type": "object"}
                                }
                            }
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "Successful operation",
                            "schema": {"type": "object"}
                        }
                    }
                }
            }
        }
    }
